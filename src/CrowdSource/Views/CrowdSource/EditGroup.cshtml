@model GroupViewModel
<h1>编辑</h1>

<form asp-controller="CrowdSource" asp-action="SubmitGroup" method="post" role="form">
    <div class="row" style="padding: 5px; background: yellow;">
        @await Component.InvokeAsync("DisplayGroup", new { GroupId = Model.GroupId })
    </div>
    <div class="row">
        <h3>关键行</h3>
        <input class="checkbox" asp-for="IsPivotRow" />
    </div>
    
    <div class="row">
        <div class="col-md-3">
            <h3>罗马字</h3>
            <input class="form-control" asp-for="TextBUC" />
        </div>
        <div class="col-md-3">
            <h3>汉字</h3>

            <input class="form-control" asp-for="TextChinese" />
            <div class="row">
                <div class="col-sm-6"><img src="~/images/oral.png" height="20" />：<input class="checkbox-inline" asp-for="IsOral" /></div>
                <div class="col-sm-6">
                    <img src="~/images/literary.png" height="20" />：<input class="checkbox-inline" asp-for="IsLiterary" />
                </div>
            </div>
            
            
        </div>
        <div class="col-md-6">
            <h3>英文</h3>
             
            <input class="form-control" asp-for="TextEnglish" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <button type="button" class="btn btn-danger">图片切割错误 / 空白</button>
        </div>
        <div class="col-md-4">
            <button type="button" class="btn btn-warning">换一条</button>
            <button type="submit" class="btn btn-primary btn-lg">提交 & 下一条</button>
        </div>
    </div>
</form>